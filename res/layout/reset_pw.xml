<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_title_height"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/backLl"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/jt_left" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/find_pw_title"
            android:textColor="#666666"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/codeEt"
            android:layout_width="0px"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/forget_pw_et_bg"
            android:hint="@string/code_hint_string"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/getCodeBtn"
            android:layout_width="0px"
            android:layout_height="42dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/login_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="重新获取验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/newPwEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/forget_pw_et_bg"
        android:hint="设置密码"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/newPwAgainEt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/forget_pw_et_bg"
        android:hint="重复密码"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <Button
        android:id="@+id/completeBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>